{
  "name": "christruitt/ct-forms",
  "description": "Developer tooling for the CT Forms WordPress plugin (PHPCS/WPCS configuration and scripts).",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "squizlabs/php_codesniffer": "^3.10",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "bin-dir": "vendor/bin",
    "sort-packages": true
  },
  "scripts": {
    "lint": "phpcs --standard=phpcs.xml.dist",
    "phpcbf": "phpcbf --standard=phpcs.xml.dist",
    "fix": "@phpcbf",
    "composer-validate": "composer validate --strict",
    "ci": [
      "@composer-validate",
      "@lint"
    ]
  }
}
