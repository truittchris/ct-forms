{
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.10",
    "wp-coding-standards/wpcs": "^3.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "lint": "phpcs --standard=WordPress --extensions=php --ignore=*/vendor/*,*/node_modules/*,*/dist/*,*/.github/* .",
    "lint:fix": "phpcbf --standard=WordPress --extensions=php --ignore=*/vendor/*,*/node_modules/*,*/dist/*,*/.github/* ."
  }
}
